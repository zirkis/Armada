<section id="login_box">
	<img src="/assets/images/homescreen.jpg" local-class="homescreen">
	<form method="post" action="traitement.php" local-class="login_form">
		<p local-class="center welcome">Welcome</p>
		<p>
			<label for="name">Name</label><br>
			{{input id='name'
				placeholder='Enter Name'
				value=name
				class=(local-class 'input_fields')
				required=true
			}}
		</p>
		<p>
			<label for="pass">Password</label><br>
			{{input id='password'
				placeholder='Enter Password'
				type='password'
				value=password
			class=(local-class 'input_fields')
				required=true
			}}
		</p>
		<p local-class="center">{{errorMessage}}</p>
		<p local-class="center">
			<input type="submit" value="Sign In" local-class="login_button"
			{{action 'authenticate'}}>
		</p>
		<p local-class="center"><img src="/assets/images/loginfacebook.jpg" local-class="bouton_facebook"></p>
		<p local-class="register_link">New user ? {{#link-to 'register'}}<a>Register</a>{{/link-to}}</p>
	</form>
</section>

{{yield}}
