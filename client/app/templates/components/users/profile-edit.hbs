{{#link-to 'dashboard'}}
	<img src="/assets/images/back.png" local-class="back"/>
{{/link-to}}
<section local-class="profile_form">
	<form method="post" local-class="profile_edit">
		<p class="center" local-class="welcome">Edit</p>
		<p>
			{{validated-input
			id='surname'
			type='text'
			label='Surname'
			value=user.surname
			valuePath='surname'
			model=user
			}}
		</p>
		<p>
			{{validated-input
			id='name'
			type='text'
			label='Name'
			value=user.name
			valuePath='name'
			model=user
			}}
		</p>
		<p>
			{{validated-input
			id='email'
			type='email'
			label='Email'
			value=user.email
			valuePath='email'
			model=user
			}}
		</p>
		<p>
			{{validated-input
			id='password'
			type='password'
			label='Password'
			value=user.password
			valuePath='password'
			model=user
			}}
		</p>
		<p>
			{{validated-input
			id='confirmPassword'
			type='password'
			label='Confirm Password'
			value=user.passwordConfirmation
			valuePath='passwordConfirmation'
			model=user
			}}
		</p>
	</form>

	<form local-class="profile_show">
		<p class="center" local-class="profile_title">Profile</p>
		<img src="/assets/images/profilepicture.jpg" local-class= "profilepic" class="profile_info">
		<p class="profile_info" local-class="profile_name">{{ user.name }}</p>
		<p class="profile_info" local-class="profile_surname">{{ user.surname }}</p>
		<p class="profile_info" local-class="profile_email">{{ user.email }}</p>
	</form>
</section>

{{yield}}
