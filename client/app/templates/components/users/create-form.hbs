<form class="ui form">
	<div class="field">
		<label>Name</label>
		{{input
		id='name_create_user'
		type='text'
		value=name
		}}
	</div>
	<div class="field">
		<label>Password</label>
		{{input
		id='password_create_user'
		type='text'
		value=password
		}}
	</div>
	<div class="field">
		<label>Role</label>
		{{#ui-dropdown class="selection" selected=role onChange=(action 'updateRole')}}
			<div class="default text">Choose a role ...</div>
			<i class="dropdown icon"></i>
			<div class="menu">
				{{#each roles as |role|}}
					<div class="item" data-value="{{role}}">
						{{role}}
					</div>
				{{/each}}
			</div>
		{{/ui-dropdown}}
	</div>
	<button class="ui button"
					type="submit"
		{{action (route-action 'createUser' user)}}>
		Create new user
	</button>
</form>
{{yield}}
